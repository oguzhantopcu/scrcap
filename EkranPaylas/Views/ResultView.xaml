<Window x:Class="EkranPaylas.Views.ResultView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Success" Height="80" Width="370">
    <Grid>
        <Grid Margin="10">
            <StackPanel Orientation="Horizontal">
                <Button HorizontalAlignment="Left" Width="70" Content="Copy"></Button>
                <Border Width="10"></Border>
                <Button HorizontalAlignment="Left" Width="70" Content="Open"></Button>
            </StackPanel>

            <TextBox HorizontalAlignment="Right" Text="{Binding Link}" Width="176"/>
        </Grid>
    </Grid>
</Window>
